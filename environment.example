# ===== Пример переменных окружения =====
# Скопируйте в .env и настройте под ваше окружение

# ===== DATABASE CONFIGURATION =====
# Предпочтительно использовать единый DATABASE_URL без Docker
# Пример: postgresql://USER:PASSWORD@localhost:5432/DB_NAME
DATABASE_URL=postgresql://tothemoon_user:tothemoon_super_secret_pass@localhost:5432/tothemoon

# ===== REDIS CONFIGURATION =====
# Без Docker используем localhost
REDIS_URL=redis://localhost:6379/0

# ===== APPLICATION CONFIGURATION =====
ENVIRONMENT=development
LOG_LEVEL=INFO
BACKEND_PORT=8000
FRONTEND_PORT=3000
NGINX_PORT=80

# ===== EXTERNAL APIS =====
# Birdeye API key - получить на https://birdeye.so/
BIRDEYE_API_KEY=b2b52f3bd99c48e9b24c26ae0987cbe9
BIRDEYE_BASE_URL=https://public-api.birdeye.so

# PumpPortal WebSocket URL
PUMPPORTAL_WS_URL=wss://pumpportal.fun/data-api/real-time

# ===== SECURITY =====
# Генерируется: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secret_key_here

# CORS origins  
CORS_ORIGINS=http://localhost:3000,http://localhost:80,http://tothemoon.sh1z01d.ru

# ===== CELERY CONFIGURATION =====
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
